{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
     "jsx": "react",
     "declaration": true,
    "pretty": true,
     "outDir": "./output",
    "strict": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true,
     "noFallthroughCasesInSwitch": true,
     "moduleResolution": "node",
     "rootDirs": [
       "src",
       "cli"
     ],
    "esModuleInterop": true
  },
  "include": [
    "cli/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "bin",
    "docs",
    "output",
    "test",
    "example"
  ]
}
